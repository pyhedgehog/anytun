#!/bin/sh

TARGET=`uname -s`

case $TARGET in 
	Linux)
		rm -rf tunDevice.cpp
		rm -rf tunDevice.h
		ln -sf linux/tunDevice.cpp 
		ln -sf linux/tunDevice.h 
	;;
	OpenBSD|FreeBSD|NetBSD)
		rm -rf tunDevice.cpp
		rm -rf tunDevice.h
		ln -sf bsd/tunDevice.cpp 
		ln -sf bsd/tunDevice.h 
	;;
	*)
		echo "Plattform not supported"
	;;
esac
